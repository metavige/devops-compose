# Hytale Server 環境變數設定範例
# 複製此檔案為 .env 並根據需求修改設定值

# ============================================
# 使用者權限設定
# ============================================
PUID=1000
PGID=1000

# ============================================
# 伺服器基本設定
# ============================================

# 伺服器名稱
SERVER_NAME=hytale-server

# 對外埠號 (預設 5520)
# 注意: Hytale 使用 UDP 協定
HYTALE_PORT=5520
DEFAULT_PORT=5520

# 最大玩家數 (建議: 20-50)
MAX_PLAYERS=20

# 視距 (單位: chunks, 建議: 8-16)
# 注意: 較高的視距會消耗更多記憶體
VIEW_DISTANCE=12

# 最大記憶體配置 (建議: 8G 或更高)
# 格式: <數字>G 例如 8G, 16G
MAX_MEMORY=8G

# ============================================
# 認證設定
# ============================================

# 認證模式: authenticated (需要帳號) 或 offline (離線模式)
AUTH_MODE=authenticated

# 以下 Token 為可選設定，用於自動認證
# 首次啟動時，若未設定這些 Token，需透過瀏覽器進行 OAuth 認證
SESSION_TOKEN=
IDENTITY_TOKEN=
OWNER_UUID=

# ============================================
# 進階設定
# ============================================

# 是否啟用自動備份
ENABLE_BACKUPS=false

# 備份頻率 (分鐘)
BACKUP_FREQUENCY=30

# 停用 Sentry 錯誤回報
DISABLE_SENTRY=true

# 使用 AOT 快取以提升效能
USE_AOT_CACHE=true

# 接受早期插件 (Beta 功能)
ACCEPT_EARLY_PLUGINS=false

# 啟動時自動下載/更新伺服器檔案
# 設為 false 後，使用獨立的更新指令來下載
DOWNLOAD_ON_START=false

# ============================================
# Docker 資源限制
# ============================================

# CPU 限制 (核心數)
CPU_LIMIT=8
CPU_RESERVATION=4

# 記憶體限制
MEMORY_LIMIT=10G
MEMORY_RESERVATION=4G
